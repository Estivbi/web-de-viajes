---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();
---

<footer class="bg-gradient-to-br from-gray-900 to-indigo-900 text-indigo-100 py-6 px-4 border-t border-indigo-700/30 text-sm">
  <div class="container mx-auto max-w-7xl">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-5 mb-5">
      
      {/* Logo y eslogan */}
      <div class="space-y-2 group">
        <div class="flex items-center gap-2">
          <svg class="w-8 h-8 text-indigo-400 group-hover:rotate-12 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
          </svg>
          <h3 class="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-indigo-300 to-purple-300">
            Aventura Escocesa
          </h3>
        </div>
        <p class="text-xs opacity-80 group-hover:opacity-100 transition-opacity">
          "Donde cada momento se convierte en leyenda"
        </p>
        <div class="flex gap-3 pt-1">
          <a href="#" class="text-indigo-300 hover:text-white transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/></svg>
          </a>
          <a href="#" class="text-indigo-300 hover:text-white transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63z"/></svg>
          </a>
        </div>
      </div>

      {/* Enlaces rápidos */}
      <div>
        <h4 class="text-base font-semibold text-white mb-2 flex items-center gap-1">
          <svg class="w-4 h-4 text-indigo-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
          </svg>
          Explorar
        </h4>
        <ul class="space-y-2 text-xs">
          <li><a href="#" class="text-indigo-200 hover:text-white transition-colors flex items-center gap-1 group">
            <span class="group-hover:underline">Itinerario</span>
            <svg class="w-2 h-2 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a></li>
          <li><a href="#" class="text-indigo-200 hover:text-white transition-colors flex items-center gap-2 group">
            <span class="group-hover:underline">Galería</span>
            <svg class="w-3 h-3 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a></li>
          <li><a href="#" class="text-indigo-200 hover:text-white transition-colors flex items-center gap-2 group">
            <span class="group-hover:underline">Consejos de viaje</span>
            <svg class="w-3 h-3 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a></li>
        </ul>
      </div>

      {/* Contacto */}
      <div>
        <h4 class="text-base font-semibold text-white mb-2 flex items-center gap-1">
          <svg class="w-4 h-4 text-indigo-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          Contacto
        </h4>
        <ul class="space-y-2 text-xs">
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-indigo-300 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span class="text-indigo-200 hover:text-white transition-colors">+34 123 456 789</span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-indigo-300 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="text-indigo-200 hover:text-white transition-colors">Edimburgo, Escocia</span>
          </li>
        </ul>
      </div>

     {/* Newsletter compacto */}
     <div>
      <h4 class="text-base font-semibold text-white mb-2 flex items-center gap-1">
        <svg class="w-4 h-4 text-indigo-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
        </svg>
        Newsletter
      </h4>
      <form class="space-y-2">
        <input 
          type="email" 
          placeholder="Tu email" 
          class="w-full px-3 py-1 text-xs rounded-lg bg-indigo-900/50 border border-indigo-700/50 focus:outline-none focus:ring-1 focus:ring-indigo-500 text-white placeholder-indigo-300"
        >
        <button 
          type="submit" 
          class="w-full bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white py-1 px-3 rounded-lg transition-all text-xs"
        >
          Suscribirse
        </button>
      </form>
    </div>
  </div>

  {/* Copyright compacto */}
  <div class="border-t border-indigo-700/30 pt-4">
    <div class="flex flex-col md:flex-row justify-between items-center gap-1 text-xs">
      <p class="text-indigo-300/70">
        © {currentYear} Aventura Escocesa
      </p>
      <div class="flex gap-2">
        <a href="#" class="text-indigo-300 hover:text-white transition-colors">Términos</a>
        <a href="#" class="text-indigo-300 hover:text-white transition-colors">Privacidad</a>
      </div>
    </div>
  </div>
</div>
</footer>

<style>
  /* Efecto de brillo sutil en hover para los elementos interactivos */
  footer a:hover, footer button:hover {
    filter: brightness(1.1);
  }
  
  /* Transición suave para todos los elementos interactivos */
  footer a, footer button, footer input {
    transition: all 0.2s ease;
  }
</style>