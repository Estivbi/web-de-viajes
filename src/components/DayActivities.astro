---
interface Props {
  activities: Record<string, string[]>;
}

const { activities } = Astro.props;
---

<div class="space-y-4">
  <h2 class="text-xl font-semibold text-indigo-700 mb-3">Actividades del Día</h2>
  
  {Object.entries(activities).map(([date, activities]) => (
    <div 
      id={`activities-${date}`}
      class="day-activities space-y-2" 
      style="display: none;"
    >
      {activities.map(activity => (
        <div class="bg-indigo-100 p-3 rounded-lg flex items-center">
          <span class="text-indigo-700 mr-2">✓</span>
          <span class="text-gray-700">{activity}</span>
        </div>
      ))}
    </div>
  ))}
</div>